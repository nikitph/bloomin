# Forest Watch Configuration

# Debug mode
DEBUG=true

# Google Earth Engine settings
# REQUIRED: Your Google Cloud project ID with Earth Engine enabled
GEE_PROJECT=your-project-id

# Optional: Service account for production
# GEE_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
# GEE_CREDENTIALS_FILE=/path/to/credentials.json

# Change detection thresholds
NDVI_CHANGE_THRESHOLD=-0.15
MIN_CHANGE_AREA_HECTARES=1.0
CLOUD_COVER_MAX=20.0

# Alert confidence thresholds
ALERT_CONFIDENCE_HIGH=0.8
ALERT_CONFIDENCE_MEDIUM=0.5
